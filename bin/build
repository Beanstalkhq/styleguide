#!/usr/bin/env sh

# Webpack build the css
echo "Building css"
node node_modules/webpack/bin/webpack.js --config webpack.config.build.js --output-path sofe

# Build CSS Modules with global defaults
echo "Building css-modules global"
node node_modules/sofe-css-builder/lib/cli.js -g -s=canopy-styleguide.css sofe/styleguide.css sofe/styleguide-global.js

# Cleanup
rm sofe/variables.js
rm sofe/styleguide.js

# Build CSS Modules with local defaults
echo "Building css-modules local"
node node_modules/sofe-css-builder/lib/cli.js -s=canopy-styleguide.css sofe/styleguide.css sofe/styleguide-local.js
